<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light" />

    <style name="text_title" parent="@android:style/TextAppearance">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@color/text_title_background</item>
        <item name="android:typeface">serif</item>
        <item name="android:textSize">22dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
      
    <style name="text_recipe_title" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/text_color_recipe_title</item>
        <item name="android:textSize">20dp</item>
        <item name="android:typeface">serif</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="text_time" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/text_color_recipe_date</item>
        <item name="android:textSize">15dp</item>
        <item name="android:typeface">serif</item>
        <item name="android:padding">5dp</item>
    </style>
    
    <style name="text_serves" parent="@android:style/TextAppearance">
        <item name="android:textColor">#000000</item>
         <item name="android:background">#FFFFFF</item>
        <item name="android:textSize">16dp</item>
        <item name="android:padding">5dp</item>
    </style>
        <style name="button_normal" parent="@android:style/Widget.Button">
        <item name="android:textColor">#000000</item>
         <item name="android:background">@drawable/button_normal</item>
        <item name="android:textSize">22dp</item>
    </style>
</resources>